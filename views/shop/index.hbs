<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <div id="success" class="alert" {{#if noMessages}}hidden{{/if}}>
                {{successMsg}}
            </div>
        </div>
    </div>
    <div class="row">
        {{#each products}}

        <div class="col-4" style="padding: 6px;">
            <div class="card" style="width: 18rem;">
                <img src="{{this.imagePath}}" alt="..." class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <div class="clearfix">
                        <div class="price pull-left">${{this.price}}</div>
                        <a href="/shop/add-to-cart/{{this._id}}" class="btn btn-success pull-right"
                            role="button">加入購物車</a>
                    </div>
                </div>
            </div>
        </div>


        {{/each}}
    </div>
</div>